<Project DefaultTargets="GenerateMsi" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="$(MSBuildExtensionsPath)\BtsMsiTask\BtsMsiTask.targets" />
	<Import Project="$(MSBuildExtensionsPath)\ExtensionPack\4.0\MSBuild.ExtensionPack.tasks"/>
	<PropertyGroup>
		<DestinationPath>.</DestinationPath>
		<ApplicationName>BizTalkComponents.PipelineComponents.SetFileExtOnEmailAttachment</ApplicationName>
	</PropertyGroup>
	<ItemGroup>
		<Resource Include="..\Src\SetFileExtOnEmailAttachment\bin\Debug\BizTalkComponents.PipelineComponents.SetFileExtOnEmailAttachment.dll" />
	</ItemGroup>
	<Target Name="GetVersion">
		<MSBuild.ExtensionPack.Framework.Assembly TaskAction="GetInfo" NetAssembly="..\Src\SetFileExtOnEmailAttachment\bin\Debug\BizTalkComponents.PipelineComponents.SetFileExtOnEmailAttachment.dll">
				<Output TaskParameter="OutputItems" ItemName="Info"/>
			 </MSBuild.ExtensionPack.Framework.Assembly>
	</Target>

	<Target Name="GenerateMsi" DependsOnTargets="GetVersion">
		<MsiTask  
			FileName="BizTalkComponents.PipelineComponents.SetFileExtOnEmailAttachment%(Info.AssemblyInformationalVersion).msi"
			DestinationPath="$(DestinationPath)"
			ApplicationName="$(ApplicationName)"
			SourceLocation="C:\%(Info.AssemblyInformationalVersion)"
			Resources="@(Resource)" />
	</Target>
</Project>